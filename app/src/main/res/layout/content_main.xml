<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.dance2die.myfirstandroidapp2.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hiDance2die"
        android:id="@+id/hiDance2die"
        android:layout_margin="10dp"
        android:background="#f00404"
        android:padding="10dp"
        android:textColor="#184be6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I Love Android"
        android:id="@+id/textView"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/hiDance2die"
        android:layout_alignLeft="@+id/hiDance2die"
        android:layout_alignStart="@+id/hiDance2die"
        android:textColor="#d8d523"
        android:background="#09fc76"
        android:layout_centerInParent="true"
        android:textSize="50dp" />
</RelativeLayout>
